#!/bin/sh
#
# Workaround for downgrading effort of pack200 to avoid VM bug
# See https://bugs.eclipse.org/bugs/show_bug.cgi?id=154069
#
curdir=`pwd`
cd `dirname $0`
mydir=`pwd`
cd "$curdir"

touch "$mydir/pack200.stamp"
date >> "$mydir/pack200.stamp"
echo "pack200 -E4 $*" >> "$mydir/pack200.stamp"
pack200 -E4 $*
